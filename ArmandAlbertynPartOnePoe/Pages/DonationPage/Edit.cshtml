@page
@model ArmandAlbertynPartOnePoe.Pages.DonationPage.EditModel
@{
}

<body style="background-color:mediumpurple">
</body>
<style>
    .btn {
        background-color: #eb520c;
    }
    .btn-close {
        background-color: #eb520c;
    }
    .btn-outline-primary {
        background-color: #eb520c;
    }
    .btn-primary {
        background-color: #eb520c;
    }
</style>
<br />
<h2>Edit Donations</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="post">
    <input type="hidden" name="id" value="@Model.donateInfo.DonationID" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="id" value="@Model.donateInfo.DonationID" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="date" value="@Model.donateInfo.DonateDate" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Amount</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="amount" value="@Model.donateInfo.DonateAmount" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="category" value="@Model.donateInfo.DonateCategory" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.donateInfo.DonateDescription" />
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
            </div>
        </div>
    </div>
</form>