@page
@model ArmandAlbertynPartOnePoe.Pages.DonationPage.CreateDModel
@{
}

<body style="background-color:mediumpurple">
</body>
<style>
    .btn {
        background-color: #eb520c;
    }
    .btn-close {
        background-color: #eb520c;
    }
    .btn-outline-primary {
        background-color: #eb520c;
    }
    .btn-primary {
        background-color: #eb520c;
    }
</style>
<br />
<h2>Disasters</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DisasterID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Did" value="@Model.disasterInfo.DisasterID" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Start Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="date" value="@Model.disasterInfo.DisasterStart" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">End Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="amount" value="@Model.disasterInfo.DisasterEnd" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="category" value="@Model.disasterInfo.DisasterLocation" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.disasterInfo.DisasterDescription" />
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Aid</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="description" value="@Model.disasterInfo.DisasterAid" />
            </div>

            <div class="row mb-3">
                <div class="offset-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                </div>
            </div>
        </div>
</form>
